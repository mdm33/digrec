= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
  = f.inputs "Sign in" do
    ._50
      != f.input :login, :label => 'User name'
    ._50
      != f.input :password
    != f.submit "Sign in"
    %input{:id => "guest", :type => "button", :onclick => "GuestLogin()", :value => "Access as guest", :style => "background-color: rgb(153, 0, 0);color: white;font-weight: 700;width: auto"}
    /%br
    /!= link_to "Register new account", new_registration_path(resource_name)
    %br
    != link_to "Forgot your password?", new_password_path(resource_name)
    %script{:type => "text/javascript"}
      function GuestLogin() {document.forms.new_user.hidden = true; document.forms.new_user.autocomplete = 'off'; document.forms.new_user.elements.user_login.value = 'guest'; document.forms.new_user.elements.user_password.value = 'corpus'; document.forms.new_user.submit();}
