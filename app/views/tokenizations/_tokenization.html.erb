<div id="presentation">
  <%= @sentence.presentation_as_editable_html %>
</div>

<% form_tag({ :controller => 'tokenizations', :action => 'update', :sentence_id => @sentence, }, :method => :put) do -%>
  <%= hidden_field_tag 'new_presentation' %>
  <%= submit_tag 'Save' %>
<% end %>
