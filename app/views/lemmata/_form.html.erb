<% form.inputs "Core data", :id => "core" do %>
  <%= form.input :lemma, :label => 'Base form' %>
  <%= form.input :part_of_speech, :label_method => :summary %>
  <%= form.input :variant, :label => 'Variant number', :hint => 'An integer number differentiating this lemma from other lemmata with the same base form and part of speech.', :required => false %>
  <%= form.input :language, :label_method => :name, :label => 'Language' %>
<% end %>

<% form.inputs "Meta-data", :id => "meta" do %>
  <%= form.input :short_gloss, :required => false %>
  <%= form.input :foreign_ids, :hint => 'A comma-separated list of key-value pairs that link the lemma to some external resource.', :required => false %>
<% end %>
