<% stylesheet 'morphtags' %>

<div class="morphtags">
  <div id="tokens">
    <% for token in @sentence.morphtaggable_tokens %>
      <div id="item-<%= token.id %>" class="item">
        <p class="form"><%= format_token_form(token) %></p>
        <div class="morph-lemma-tags <%= (token.morphtag and token.lemma_id) ? 'mannotated' : 'munannotated' %>">
          <p class="pos">&nbsp;<%= morphtag_pos(token) %></p>
          <p class="morphology">&nbsp;<%= morphtag_non_pos(token) %></p>
          <% if token.lemma %>
            <p>(<%= link_to_lemma(token.lemma) %><% if token.lemma.short_gloss %> <q><%= token.lemma.short_gloss %></q><% end %>)</p>
          <% else %>
            <p>&nbsp;</p>
          <% end %>
        </div>
      </div>
    <% end %>

    <br/>
  </div>
</div>
