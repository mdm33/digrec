- javascript 'application'

- context_bar do
  .breadcrumbs
    != breadcrumbs ['Contents', sources_path], @source
  .resources
    != link_to_resources @source, :edit

  - if @source.metadata.valid?
    %p
      #metadata.toggle-hidden{:title => 'metadata'}
        != @source.metadata.to_html

%p
  != paginate @source_divisions

.table-of-source-divisions
  %ul
    - @source_divisions.each do |source_division|
      %li!= link_to "#{source_division.title} (#{source_division.citation})", source_division
