<% roundedbox do -%>
  <b><%=h @sentence.citation %></b> <%= readable_completion(@sentence, :checkmark => :only) %> (<%= current_user.assigned_sentences.length %> sentences in queue)<br/>
  <%= external_text_links(@sentence) %><br/>
  <p>
    <%= format_sentence(@sentence, { :sentence_numbers => true, :token_numbers => true}) %>
  </p>
<% end %>
