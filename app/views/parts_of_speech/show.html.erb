<% roundedbox do -%>
  <dt>Part of speech</dt><dd class="pos"><%= @part_of_speech.summary %></dd>
  <dt>Tag</dt><dd class="tag"><%= @part_of_speech.tag %></dd>
  <dt>Languages</dt><dd><%= @part_of_speech.languages.name %></dd>
  <dt>Frequency</dt><dd><%= pluralize(@part_of_speech.lemmata.count, "lemma") + ', ' + pluralize(@part_of_speech.tokens.count, "token") %></dd>
<% end %>
  
<% layer :lemmata do -%>
  <% search_form_tag @part_of_speech do %>
    <%= text_field_tag :query, params[:query] %>
  <% end %>
<% end %>

<%= lemmata_table @lemmata %>
