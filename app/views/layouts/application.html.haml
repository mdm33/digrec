!!! 5
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'viewport',:content => 'width=device-width, initial-scale=1.0'}
    %link{:rel => 'search', :type => 'application/opensearchdescription+xml', :title => CONFIG.title, :href => '/search.xml'}

    %title= show_title? ? [CONFIG.title, yield(:title)].join(': ') : CONFIG.title

    != favicon_link_tag
    != csrf_meta_tag

    != stylesheet_link_tag "screen",     :media => "screen"

    != yield :head
  %body
    #headline

    #navigation-bar
      .left
        != link_to 'Contents', root_path, :accesskey => 't', :accesskey => '1'
        != link_to 'Dictionary', dictionaries_path
        != link_to 'Search', search_path
        - if is_annotator?
          != link_to 'Annotation', wizard_path
          != link_to 'Statistics', statistics_path
        - if is_reviewer?
          != link_to 'Changelog', audits_path
          != link_to 'Users', users_path
        - if user_signed_in?
          != link_to 'Your profile', edit_profile_path
      .right
        - if user_signed_in?
          != link_to 'Logout', destroy_user_session_path
        - else
          != link_to 'Sign in', new_user_session_path
        != link_to 'Help', page_path('help'), :accesskey => '6'
        != link_to 'Downloads', page_path('public_data')

    - if show_context_bar?
      #context-bar
        != yield(:context_bar)

    - if show_message_block?
      #message-block
        != message_block

    #contents
      - if controller_name == 'pages'
        .markdown
          != yield
      - else
        != yield

    %footer
      %span.tag proiel-webtool
      != "release #{PROIEL_RELEASE}."
      %br
      This application is Copyright 2007, 2008, 2009, 2010, 2011, 2012 University of Oslo, Marius L. Jøhndal, Dag Haug and Anders Nøklestad, and released under the GNU General Public License version 2.
