- context_bar do
  .breadcrumbs
    != breadcrumbs ['Contents', sources_path], @source, @source_division, @sentence, 'Edit'
  %p
    != external_text_links @sentence

= simple_form_for @sentence do |f|
  != f.input :presentation_before, required: false, label: 'Presentation text before sentence'
  != f.input :presentation_after,  required: false, label: 'Presentation text after sentence'
  != f.button :submit, 'Update'
