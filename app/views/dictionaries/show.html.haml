- context_bar do
  .breadcrumbs
    != breadcrumbs ['Dictionary', dictionaries_path], @dictionary.name

= semantic_form_for @search, :url => dictionary_path, :method => :get do |f|
  != f.input :lemma_wildcard_matches, :label => 'Lemma base form', :required => false, :hint => 'Use ? to match any character or * to match any string'
  != f.input :variant_equals, :label => 'Lemma variant', :required => false
  != f.input :part_of_speech_tag_equals, :label => 'Part of speech', :collection => Lemma.represented_parts_of_speech, :required => false
  != f.submit "Search"

.tabular
  != will_paginate @lemmata

  %table.odd-even-line
    %thead
      %tr
        %th Lemma
        %th Part of speech

    %tbody
      - @lemmata.each do |lemma|
        %tr
          %td
            != link_to lemma.export_form, lemma, :lang => lemma.language.tag
          %td
            = lemma.pos_summary.capitalize
