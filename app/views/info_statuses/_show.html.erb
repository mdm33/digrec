<% stylesheet 'sentence_divisions', 'info_statuses' %>

<div>
  Contrast: <%= select_tag('contrast-select', @contrast_options, :onchange => "AnaphoraAndContrast.showContrastNo(this.value);") %>
  <% if params[:action] == 'edit' %>
  <input type="button" value="Create new" onclick="AnaphoraAndContrast.createNewContrast();" />
  <input type="button" value="Delete" onclick="AnaphoraAndContrast.deleteContrast();" />
  <input id="delete-prodrop-button" type="button" value="Delete prodrop token" onclick="Prodrop.deleteProdropToken();" style="position:relative; left:50px" disabled="disabled" />
  <% end %>
</div>
<div class="sentence-divisions">
  <%= format_sentence(@sentence.previous_sentences(true).last(num_previous_sentences) + [@sentence] + @sentence.next_sentences.first(num_next_sentences),
    { :verse_numbers => true, :information_status => true, :highlight => @sentence.tokens }) %>
</div>
