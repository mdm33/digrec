- stylesheet 'info_statuses'

!= render 'legend_edit'

%div
  Contrast:
  != select_tag('contrast-select', @contrast_options, :onchange => "AnaphoraAndContrast.showContrastNo(this.value);")
  <input type="button" value="Create new" onclick="AnaphoraAndContrast.createNewContrast();" />
  <input type="button" value="Delete" onclick="AnaphoraAndContrast.deleteContrast();" />
  <input id="delete-prodrop-button" type="button" value="Delete prodrop token" onclick="Prodrop.deleteProdropToken();" style="position:relative; left:50px" disabled="disabled" />

#info-status.sentence-divisions
  != format_sentences_for_info_status(@sentence.sentence_window(13, 1, :include_previous_source_division => true))
